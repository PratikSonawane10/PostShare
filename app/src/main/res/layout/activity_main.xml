<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                card_view:cardCornerRadius="@dimen/_2sdp"
                card_view:cardElevation="@dimen/_2sdp">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/petListImageAndTittleContentLayout">

                        <RelativeLayout
                            android:id="@+id/petListImageRelativeLayout"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_120sdp">

                            <ImageView
                                android:id="@+id/image"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ashsuit"
                                android:layout_marginTop="@dimen/_16sdp"
                                android:layout_marginBottom="@dimen/_16sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginRight="@dimen/_17sdp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/petListContentRelativeLayout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/petListImageRelativeLayout">
                            <TextView
                                android:id="@+id/title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:textSize="@dimen/_17sdp"
                                android:text="Indian Dog"
                                android:textStyle="bold"
                                android:ellipsize="end"/>


                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/petListDescriptionLayout"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_below="@+id/petListImageAndTittleContentLayout">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/description"
                            android:text="Arriving in #Rotterdam #today! 25th November (2PM - 8PM) Hilton Rotterdam Weena 10, Rotterdam (+31107108005) Mobile: +44-7816-107-472 #tailored #bespoke #suit #men #menswear #formal #formalwear #tailor #customsuit #tailormade #fashion #suits"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginRight="@dimen/_16sdp"
                            android:ellipsize="end"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:id="@+id/petListDividerLine"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_below="@+id/petListDescriptionLayout"/>

                    <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/petListDividerLine">

                        <ImageButton
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:id="@+id/shareImageButtonFacebook"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/facebook"
                            />
                        <ImageButton
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:id="@+id/shareImageButtonGoogle"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/shareImageButtonFacebook"
                            android:background="@drawable/google"
                            />
                    </RelativeLayout>
                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
